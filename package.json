    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "@vercel/node": "^3.0.0"
  },
  "engines": {
    "node": "18.19.0"
  }
}